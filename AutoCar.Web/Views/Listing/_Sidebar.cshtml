    <!-- Year -->
    <div class="widget">
        <h4 class="widget-title">Year Range</h4>
        <div class="row">
            <div class="col-md-6">
                <select class="form-control">
                    <option>From</option>
                </select>
            </div>
            <div class="col-md-6">
                <select class="form-control">
                    <option>To</option>
                </select>
            </div>
