                <button class="btn btn-default" type="button">Go!</button>
            </span>
        </div>
    </div>

    <!-- Price -->
    <div class="widget">
        <h4 class="widget-title">Price Range</h4>
        <div class="row">
            <div class="col-md-6">
                <select class="form-control">
                    <option>From</option>
                </select>
            </div>
            <div class="col-md-6">
                <select class="form-control">
                    <option>To</option>
                </select>
            </div>
        </div>
    </div>
    <!-- Price end -->
