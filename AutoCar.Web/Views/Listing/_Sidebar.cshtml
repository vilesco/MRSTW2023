@model AutoCar.Web.Models.ListingPageData

@if (Model != null)
{
    using (Html.BeginForm("Sidebar", "Listing", FormMethod.Post))
    {
        <!-- Side Bar start -->
        <div class="sidebar">
            <!-- By Keyword -->
            <div class="widget">
                <h4 class="widget-title">Search By Keyword</h4>
                <div class="input-group">
                    @Html.TextBoxFor(a => a.SideBar.KeyWord, new { @class = "form-control", placeholder = "Keyword" })
                </div>
            </div>
            <!-- Price -->
            <div class="widget">
                <h4 class="widget-title">Price Range $</h4>
                <div class="row">
                    <div class="col-md-6">
                        <select class="form-control" name="SideBar.MinPrice">
                            <option value="0">From</option>
                            @foreach (var item in Model.SideBar.PriceRange)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <select class="form-control" name="SideBar.MaxPrice">
                            <option value="1000000">To</option>
                            @foreach (var item in Model.SideBar.PriceRange)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <!-- Price end -->
            <!-- Cars By City -->
            <div class="widget">
                <h4 class="widget-title">City</h4>
                <select class="form-control" name="SideBar.Location">
                    <option value="Not specified">Any City</option>
                    @foreach (var item in Model.SideBar.LocationList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <!-- Cars By City end-->
            <!-- Year -->
            <div class="widget">
                <h4 class="widget-title">Year Range</h4>
                <div class="row">
                    <div class="col-md-6">
                        <select class="form-control" name="SideBar.MinYear">
                            <option value="">From</option>
                            @foreach (var item in Model.SideBar.YearRange)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <select class="form-control" name="SideBar.MaxYear">
                            <option value="">To</option>
                            @foreach (var item in Model.SideBar.YearRange)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <!-- Year end -->
            <!-- type -->
            <div class="widget">
                <h4 class="widget-title">Type</h4>
                <select class="form-control" name="SideBar.Type">
                    <option value="Not specified">Type</option>
                    <option value="New">New</option>
                    <option value="Used">Used</option>
                </select>
            </div>
            <!-- type end -->
            <!-- Make -->
            <div class="widget">
                <h4 class="widget-title">Make</h4>
                <select class="form-control" name="SideBar.Make">
                    <option value="Not specified">Make</option>
                    @foreach (var item in Model.SideBar.MakeList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>
            <!-- Make end -->
            <!-- Transmission -->
            <div class="widget">
                <h4 class="widget-title">Transmission</h4>
                <ul class="optionlist">
                    <li>
                        <input type="checkbox" name="SideBar.Transmission" value="Automatic" />
                        <label for="auto"></label>
                        Automatic
                    </li>
                    <li>
                        <input type="checkbox" name="SideBar.Transmission" value="Manual" />
                        <label for="Manual"></label>
                        Manual
                    </li>
                </ul>
            </div>

            <!-- Engine -->
            <div class="widget">
                <h4 class="widget-title">Fuel Type</h4>
                <ul class="optionlist">
                    <li>
                        <input type="checkbox" name="SideBar.Fuel" id="fuelGasoline" value="Gasoline"/>
                        <label for="fuelGasoline"></label>
                        Gasoline
                    </li>
                    <li>
                        <input type="checkbox" name="SideBar.Fuel" id="fuelDiesel" value="Diesel"/>
                        <label for="fuelDiesel"></label>
                        Diesel
                    </li>
                </ul>
            </div>

            <!-- button -->
            <div class="searchnt">
                <input type="submit" class="btn" value="Update Results">
            </div>
            <!-- button end-->
        </div>
        <!-- Side Bar end -->
    }
}
