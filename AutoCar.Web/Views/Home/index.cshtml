@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

@model AutoCar.Web.Models.SearchWrapData

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="searchwrap">
        <div class="container">
            <h3>Find Used Cars In Moldova</h3>
            <p>Search from over 99,00,000 Active ads &amp; Post free unlimited classifieds ads!</p>
            <div class="searchbar">
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(a => a.MakeOrModel, new { @class = "form-control", placeholder = "Car Make or Model" })
                        @Html.ValidationMessageFor(a => a.MakeOrModel)
                    </div>
                    <div class="col-md-2">
                        <select class="form-control" name="PriceRange">
                            <option value="">Any Price</option>
                            <option value="500-999">$500 - $999</option>
                            <option value="1000-1999">$1000 - $1999</option>
                            <option value="2000-2499">$2000 - $2499</option>
                            <option value="2500-2999">$2500 - $2999</option>
                            <option value="3000-3499">$3000 - $3499</option>
                            <option value="3500-3999">$3500 - $3999</option>
                            <option value="4000-@Int32.MaxValue">About $4000</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-control" name="Location">
                            <option value="">Any City</option>
                            <option value="Chisinau">Chișinău</option>
                            <option value="Balti">Bălți</option>
                            <option value="Soroca">Soroca</option>
                            <option value="Orhei">Orhei</option>
                            <option value="Cahul">Cahul</option>
                            <option value="Comrat">Comrat</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="submit" class="btn" value="Search">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Featured Cars start -->
<div class="section">
