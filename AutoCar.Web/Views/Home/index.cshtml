            @foreach (var post in ViewBag.LatestRecords)
            {
                <li class="item">
                    <div class="innerad">
                        <h3><a href="@Url.Action("Detail", "Detail", new {PostId = post.Id})">@post.Make @post.Model @post.Year</a></h3>
                        <div class="price">$@post.Price</div>
                        <div class="location"><i class="fa fa-map-marker" aria-hidden="true"></i> @post.Location</div>
                    </div>
                    <div class="adimg">
                        <div class="ribbon_3 popular"><span>Featured</span></div>
                        <a href="@Url.Action("Detail", "Detail", new {PostId = post.Id})"><img src="@Url.Content(post.ImagePath ?? "Content/images/NoImage.jpg")" alt=""></a>
