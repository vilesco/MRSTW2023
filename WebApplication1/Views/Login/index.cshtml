@{
     @model WebApplication1.Models.Login
     Layout = "~/Views/Shared/_LayoutLogin.cshtml";
     ViewBag.Title = "Login";
}


<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Login</h1>
            </div>

        </div>
    </div>
</div>
<!-- Page Title End -->

<div class="listpgWraper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="userccount">
                    <h5>User Login</h5>
                    <!-- login form -->
                    <div class="formpanel">
                        <div class="formrow">
                            <input type="text" class="form-control" placeholder="Username">
                        </div>
                        <div class="formrow">
                            <input type="text" class="form-control" placeholder="Password">
                        </div>
                        <input type="submit" class="btn" value="Login">
                    </div>
                    <!-- login form  end-->
                    <!-- sign up form -->
                    <div class="newuser"><i class="fa fa-user" aria-hidden="true"></i> New User? <a href="@Url.Action("Index", "Register")">Register Here</a></div>
                    <!-- sign up form end-->
                </div>
            </div>
        </div>
    </div>
</div>
